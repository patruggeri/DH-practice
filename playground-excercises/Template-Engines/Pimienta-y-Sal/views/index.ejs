<!DOCTYPE html>
<html>
  <head>
    <%- include("./partials/head") %>
  </head>

  <body>
    <!-- Navbar (sit on top) -->
    <%- include("./partials/navbar") %>

    <!-- Header -->
    <%- include("./partials/header") %>

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <%- include("./partials/about") %>

      <hr />

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuestro Menu</h1>
          <br />
          <% for (dish of dishes) { %>
          <h4><%= dish.title %></h4>
          <p class="ps-text-grey"><%= dish.desc %> - <%= dish.price %></p>
          <br />
          <% } %>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img src="/images/menu.jpg" class="ps-round ps-image ps-opacity-min" alt="Menu" />
        </div>
      </div>

      <!-- Footer -->
      <%- include("partials/footer") %>
    </div>
  </body>
</html>

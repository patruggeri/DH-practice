<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <%- include('partials/head', {title: 'Formulario de login'}) %>
  <body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
    <!-- /Header -->

    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Formulario de login</h2>
        </div>
      </div>
      <div class="col-12">
        <form action="/login" method="POST" enctype="multipart/form-data">
          <div class="row product-detail">
            <div class="col-12">
              <label for="email" class="form-label">Correo electrónico:</label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="Ej: liomessi@psg.com"
                class="form-input"
              />
            </div>
            <div class="col-md-12">
              <label for="password" class="form-label">Contraseña</label>
              <input
                type="password"
                id="password"
                name="password"
                placeholder="Ingrese su contraseña"
                class="form-input"
              />
            </div>
            <div class="col-12">
              <label for="rememberMe" class="form-label">Recordame</label>
              <input type="checkbox" name="rememberMe" />
            </div>
            <div class="col-12">
              <button type="submit" class="buy-now-button">Registrarse</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
  </body>
</html>
